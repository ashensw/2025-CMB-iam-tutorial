# Azure OpenAI Configuration (REQUIRED for AI mode)
AZURE_OPENAI_API_KEY=your_azure_openai_api_key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2025-01-01-preview
AZURE_DEPLOYMENT_CHAT=gpt-4o-2024-11-20
DEPLOYMENT_NAME=gpt-4o

# Asgardeo Configuration (REQUIRED)
CLIENT_ID=your_client_id
CLIENT_SECRET=your_client_secret
ASGARDEO_BASE_URL=https://api.asgardeo.io/t/your-org
REDIRECT_URI=http://localhost:8001/callback

# Agent Configuration (IETF OAuth 2.0 AI Agent Draft Compliance)
AGENT_NAME=pizza_agent
AGENT_ID=pizza_ai_assistant
AGENT_SECRET=your_agent_secret_here

# Pizza API Configuration
PIZZA_API_URL=http://localhost:8000/pizza-api/v1.0
PIZZA_API_REQUIRED_SCOPES=order:read

# Server Configuration
HOST=0.0.0.0
PORT=8001

# Demo Mode - Set to false to use real Azure OpenAI, true for rule-based responses
DEMO_MODE=false
